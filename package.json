{
  "name": "golden-validator",
  "version": "0.0.1",
  "description": "An easy peasy validation library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "lint": "tslint -p tsconfig.json",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn test && yarn lint",
    "postversion": "git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alaboudi/golden-validator.git"
  },
  "keywords": [
    "validator",
    "validation",
    "valid",
    "gold",
    "golden",
    "easy",
    "easy-peasy",
    "peasy"
  ],
  "author": "Yazan Alaboudi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alaboudi/golden-validator/issues"
  },
  "homepage": "https://github.com/alaboudi/golden-validator#readme",
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "husky": "^1.0.1",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "tslint -p tsconfig.json --fix",
      "git add"
    ]
  }
}
